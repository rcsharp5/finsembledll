<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        xmlns:FinsembleHeaderControl="clr-namespace:FinsembleHeaderControl;assembly=FinsembleHeaderControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" 
        Width="525" WindowStyle="None" Background="{x:Null}" >

    <WindowChrome.WindowChrome>
        <WindowChrome     
        CaptionHeight="1"  
        CornerRadius ="0"
        ResizeBorderThickness="4"         
        GlassFrameThickness="0"/>
    </WindowChrome.WindowChrome>
    <Grid Background="White">
        <FinsembleHeaderControl:FinsembleHeader Name="FinsembleHeader" Height="34" VerticalAlignment="Top" Margin="0,0,0,0"/>
    </Grid>
</Window>
